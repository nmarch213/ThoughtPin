<div class="ui main text container">
	<div class="ui huge header">{{blog.title}}</div>
	<div class="ui top attached segment">
		<div class="item">
			<img class="ui centered rounded image" src={{blog.image}} alt="Blog picture">
			<div class="content">
				<span>{{blog.created}}</span>
			</div>
			<div class="description">
				<p>{{blog.body}}</p>
			</div>
			<a href="/blogs/{{blog.id}}" class="ui orange basic button">Edit</a>
			<form id="delete" method="POST" action="/blogs/{{blog.id}}?_method=DELETE">
				<button class="ui red basic button">Delete</button>
			</form>
		</div>
	</div>
</div>